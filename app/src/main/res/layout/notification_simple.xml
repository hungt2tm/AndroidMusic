<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundNotification">

    <ImageView
        android:id="@+id/notification_album_simple"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/avatar_holder"
        android:contentDescription="Notification Album" />

    <TextView
        android:id="@+id/notification_title_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="145dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="145dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/notification_album_simple"
        android:layout_toRightOf="@id/notification_album_simple"
        android:alpha="0.8"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/notification_artist_simple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_title_simple"
        android:layout_marginEnd="145dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="145dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/notification_album_simple"
        android:layout_toRightOf="@id/notification_album_simple"
        android:alpha="0.5"
        android:maxLines="1"
        android:paddingEnd="24dp"
        android:paddingRight="24dp"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/notification_close_simple"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:alpha="0.2"
        android:contentDescription="Notification Close"
        android:src="@drawable/notification_close" />

    <ImageView
        android:id="@+id/notification_next_simple"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/notification_close_simple"
        android:layout_toStartOf="@id/notification_close_simple"
        android:contentDescription="Notification Next"
        android:scaleType="centerInside"
        android:src="@drawable/notification_next" />

    <ImageView
        android:id="@+id/notification_play_simple"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/notification_next_simple"
        android:layout_toStartOf="@id/notification_next_simple"
        android:contentDescription="Notification Play"
        android:scaleType="centerInside"
        android:src="@drawable/notification_play" />

    <ImageView
        android:id="@+id/notification_previous_simple"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/notification_play_simple"
        android:layout_toStartOf="@id/notification_play_simple"
        android:contentDescription="Notification Previous"
        android:scaleType="centerInside"
        android:src="@drawable/notification_previous" />
</RelativeLayout>