<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/home_padding">

    <ImageView
        android:id="@+id/imgThirdGenre"
        android:layout_width="@dimen/art_work"
        android:layout_height="@dimen/art_work"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="6dp" />

    <ImageView
        android:id="@+id/imgSecondGenre"
        android:layout_width="@dimen/art_work"
        android:layout_height="@dimen/art_work"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@id/imgThirdGenre" />

    <ImageView
        android:id="@+id/imgFirstGenre"
        android:layout_width="@dimen/art_work"
        android:layout_height="@dimen/art_work"
        android:layout_toLeftOf="@id/imgSecondGenre" />

    <TextView
        android:id="@+id/txtGenreTitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/art_work"
        android:layout_marginLeft="6dp"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxWidth="180dp"
        android:textSize="18dp" />
</RelativeLayout>